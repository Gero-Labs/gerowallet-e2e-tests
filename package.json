{
  "name": "gerowallet-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end automation testing for GeroWallet Chrome extension",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:wallet": "playwright test tests/specs/01-wallet-creation.spec.ts tests/specs/02-wallet-login.spec.ts",
    "test:transactions": "playwright test tests/specs/03-transaction-build.spec.ts tests/specs/04-transaction-send.spec.ts",
    "test:staking": "playwright test tests/specs/05-staking.spec.ts",
    "test:dapp": "playwright test tests/specs/06-dapp-connection.spec.ts",
    "setup:wallets": "tsx scripts/setup-test-wallets.ts",
    "build:extension": "bash scripts/build-extension.sh",
    "report": "playwright show-report"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "chrome-extension",
    "cardano",
    "wallet"
  ],
  "author": "A.D. Labs",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.10.5",
    "dotenv": "^16.4.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@cardano-sdk/core": "^0.46.9",
    "@cardano-sdk/crypto": "^0.2.0",
    "@cardano-sdk/util": "^0.15.13",
    "bip39": "^3.1.0"
  }
}